                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!--HYDRAULIC STATION Button-->
                    <Button Grid.Column="0" Grid.Row="1" Content="HYDRAULIC STATION" Margin="40,10,40,10" Background="#FFDD00" FontSize="11">
